@model ToyStore.ViewModels.Items.EditVM
    <script>
        function AddNewCategoryBtnonclick(){
            $("#hiddenForAddNewCategoryBtn").toggle();
        };
        function CategoryIdonchange() {
            $("#NewCategory").val("");
        };
        function NewCategoryonchange() {
            $("#CategoryId").val("");
        }
    </script>
        <tr>
            <td>@Html.LabelFor(model => model.Name)</td>
            <td>@Html.TextBoxFor(model => model.Name) @Html.ValidationMessageFor(model => model.Name, null, new { style = "color: red;" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.IdentificationKod)</td>
            <td>@Html.TextBoxFor(model => model.IdentificationKod) @Html.ValidationMessageFor(model => model.IdentificationKod, null, new { style = "color: red;" })</td>
        </tr>


        <tr>
            <td>@Html.LabelFor(model => model.CategoryId)</td>
            <td>
                @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.CategoriesList, "Value", "Text"), new { onchange = "CategoryIdonchange();" })
                <input type="button" id="AddNewCategoryBtn" value="Or Add New Category !" class="button" onclick="AddNewCategoryBtnonclick();" />
                @Html.ValidationMessageFor(model => model.CategoryId, null, new { style = "color: red;" })
            </td>
        </tr>
        <tr id="hiddenForAddNewCategoryBtn" style="display:@(Model.NewCategory == null ? "none" : "inline")">
            <td>@Html.LabelFor(model => model.NewCategory)</td>
            <td>@Html.TextBoxFor(model => model.NewCategory,new { onclick = "NewCategoryonchange();" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.AgeId)</td>
            <td>@Html.DropDownListFor(model => model.AgeId, new SelectList(Model.AgesList, "Value", "Text"))</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Gender)</td>
            <td>
                @Html.RadioButton("Gender", "Boys") Boys
                @Html.RadioButton("Gender", "Girls") Girls
                @Html.RadioButton("Gender", "Both") Both
            </td>
            <td>@Html.ValidationMessageFor(model => model.Gender, null, new { style = "color: red;" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Description)</td>
            <td>@Html.TextAreaFor(model => model.Description) @Html.ValidationMessageFor(model => model.Description, null, new { style = "color:red" })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Price)</td>
            <td>@Html.EditorFor(model => model.Price, new { htmlAttributes = new { @type = "number", @readonly = "true" } })</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.AvailableQuantity)</td>
            <td>@Html.EditorFor(model => model.AvailableQuantity, new { htmlAttributes = new { @type = "number", @readonly = "true" } })</td>
        </tr>


  
   